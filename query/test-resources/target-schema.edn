{:objects
 {:p14n.spec/Person
  {:description "A person in the system"
   :fields
   {:p14n.spec/ID {:type ID}
    :p14n.spec/firstname {:type (non-null String)}
    :p14n.spec/lastname {:type (non-null String)}
    :p14n.spec/groups {:type (non-null (list :p14n.spec/Group))
             :description "Groups this person belongs to"
             :resolve :Person/groups}
    :p14n.spec/email {:type (non-null String)}}}}

 :p14n.spec/Group
 {:description "A group of people"
  :fields
  {:id {:type ID}
   :p14n.spec/people {:type (non-null (list :p14n.spec/Person))
            :description "People in this group"
            :resolve :Group/people}}}

 :queries
 {:person_by_id
  {:type :Person
   :description "Access a Person by its unique id, if it exists"
   :args {:id {:type ID}}
   :resolve :query/person-by-id}

  :group_by_id
  {:type :Group
   :description "Access a Group by its unique id, if it exists"
   :args {:id {:type ID}}
   :resolve :query/group-by-id}}}
